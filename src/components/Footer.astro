---
import { Mail, MapPin, Phone, Facebook, Linkedin, Twitter } from "lucide-react"
---

    <footer class="bg-card border-t border-border">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-3 gap-12 mb-8">
          {/* Company Info */}
          <div>
            <h3 class="text-xl font-bold text-foreground mb-4">SecureVision</h3>
            <p class="text-muted-foreground leading-relaxed">
            </p>
          </div>

          {/* Contact Info */}
          <div>
            <h4 class="text-lg font-semibold text-foreground mb-4">Contacto</h4>
            <div class="space-y-3">
              <div class="flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors">
                <Phone size={18} />
                <span>+1 (555) 123-4567</span>
              </div>
              <div class="flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors">
                <Mail size={18} />
                <span>info@securevision.com</span>
              </div>
              <div class="flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors">
                <MapPin size={18} />
                <span>123 Security Ave, Tech City</span>
              </div>
            </div>
          </div>

          {/* Social Links */}
          <div>
            <h4 class="text-lg font-semibold text-foreground mb-4">Síguenos</h4>
            <div class="flex gap-4">
              <a
                href="#"
                class="w-10 h-10 bg-primary/20 hover:bg-primary/40 rounded-lg flex items-center justify-center text-primary transition-colors"
                aria-label="Facebook"
              >
                <Facebook size={20} />
              </a>
              <a
                href="#"
                class="w-10 h-10 bg-primary/20 hover:bg-primary/40 rounded-lg flex items-center justify-center text-primary transition-colors"
                aria-label="LinkedIn"
              >
                <Linkedin size={20} />
              </a>
              <a
                href="#"
                class="w-10 h-10 bg-primary/20 hover:bg-primary/40 rounded-lg flex items-center justify-center text-primary transition-colors"
                aria-label="Twitter"
              >
                <Twitter size={20} />
              </a>
            </div>
          </div>
        </div>

        {/* Divider */}
        <div class="border-t border-border mb-6" />

        {/* Bottom */}
        <div class="flex flex-col md:flex-row justify-between items-center text-sm text-muted-foreground">
          <p>&copy; 2025 SecureVision. Todos los derechos reservados.</p>
          <div class="flex gap-6 mt-4 md:mt-0">
            <a href="#" class="hover:text-primary transition-colors">
              Política de Privacidad
            </a>
            <a href="#" class="hover:text-primary transition-colors">
              Términos de Servicio
            </a>
          </div>
        </div>
      </div>
    </footer>
