---
import { Camera, Eye, Smartphone, Lock, Zap, Users } from "lucide-react"

  const services = [
    {
      id: 1,
      icon: Camera,
      title: "Cámaras HD 4K",
      description: "Cámaras de última generación con resolución 4K para capturar cada detalle",
    },
    {
      id: 2,
      icon: Eye,
      title: "Vigilancia Inteligente",
      description: "Tecnología IA que detecta automáticamente comportamientos sospechosos",
    },
    {
      id: 3,
      icon: Smartphone,
      title: "App Móvil",
      description: "Acceso en tiempo real a tus cámaras desde cualquier dispositivo",
    },
    {
      id: 4,
      icon: Lock,
      title: "Encriptación",
      description: "Datos protegidos con encriptación de grado militar",
    },
    {
      id: 5,
      icon: Zap,
      title: "Instalación Rápida",
      description: "Configuración e instalación profesional en 24 horas",
    },
    {
      id: 6,
      icon: Users,
      title: "Soporte 24/7",
      description: "Equipo de soporte técnico disponible en cualquier momento",
    },
  ]
---
    <section id="services" class="py-4 md:py-10 bg-[#f6f6f6]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#333333] mb-4">
            Nuestros Servicios
          </h2>
          <p class="text-xl text-[#333333] max-w-2xl mx-auto">
            Soluciones completas de seguridad para proteger lo que más importa
          </p>
        </div>

        {/* Services Grid */}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service) => {
            const Icon = service.icon;
            return (
              <div
                class="group bg-white p-8 rounded-xl border border-[#e8e8e8] shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-2"
              >
                <h3 class="text-xl font-bold text-[#333333] mb-3">{service.title}</h3>
                <p class="text-[#333333] opacity-80 leading-relaxed">
                  {service.description}
                </p>
              </div>
            );
          })}
        </div>

        {/* CTA Section (descomentada y mejorada) */}
        <div class="mt-20 rounded-2xl p-8 md:p-12 bg-gradient-to-r from-[#333333] to-[#444444] text-center">
          <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
            ¿Listo para asegurar tu hogar o negocio?
          </h3>
          <p class="text-lg text-[#e8e8e8] mb-8 max-w-2xl mx-auto">
            Solicita una consulta gratuita con nuestros expertos en seguridad
          </p>
          <button class="bg-[#990100] hover:bg-[#b90504] px-6 py-3 rounded-lg text-white font-medium transition-colors shadow-lg hover:shadow-red-500/20">
            Agendar Consulta
          </button>
        </div>
      </div>
    </section>

